<!-- The style resources of the "Web Explorer" app. -->
<resources>
    <!-- "Web Explorer" app base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <!-- "Welcome message" TextView style. -->
    <style name="WelcomeMessageTextView" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <!-- "Web Page Loader SDK trigger" Button style. -->
    <style name="WebViewTriggerButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:letterSpacing">1.25</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/quicksand_semi_bold</item>
        <item name="android:layout_marginTop">48dp</item>
    </style>
</resources>
